
.article-list-li-right-date{
	font-size: 28rpx;
	margin-top: 46rpx;
	color: #969696;
}
.article-list-li-right-title{
	font-size: 36rpx;
	letter-spacing: 1rpx;
	font-weight: 500;
	overflow: hidden;
	-webkit-line-clamp: 2;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	height: 98rpx;
}
.article-list-li-right{
	float: left;
	width: 64%;
	margin-left: 4%;
}
.article-list-li{
	clear: both;
	overflow: hidden;
	height: 170rpx;
	padding: 40rpx 0 40rpx 0;
	border-bottom: 1rpx solid #F0F0F0;
	width: 100%;
}
.article-list-li-thumb{
    width: 32%;
    height: 100%;
    float: left;
}

