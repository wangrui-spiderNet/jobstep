
.study-li-play{
    position: absolute;
    width: 68rpx;
    height: 68rpx;
    right: 40%;
    top: 21%;
}
.study-li-date{
    font-size: 28rpx;
    color: #969696;
}
.study-li-des{
	letter-spacing: 1rpx;
	width: 100%;
	-webkit-line-clamp: 2;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	height: 92rpx;
	overflow: hidden;
	font-size: 32rpx;
}
.study-li-img{
    width: 100%;
    height: 230rpx;
}
.study-li{
    width: 48.5%;
    float: left;
    margin-top: 20rpx;
	position: relative;
}
.study-li:nth-of-type(2n){
	margin-left: 3%;
}

